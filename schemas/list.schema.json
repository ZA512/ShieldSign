{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShieldSign Domain List Schema",
  "description": "Schéma de validation des listes de domaines pour ShieldSign",
  "type": "object",
  "required": ["schema_version", "list_name", "domains", "maintainer"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Version du schéma de liste (actuellement 1)"
    },
    "list_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Nom descriptif de la liste"
    },
    "domains": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1000,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9.-]+\\.[a-z]{2,}$",
        "description": "Domaine ou sous-domaine complet (ex: login.example.com)"
      },
      "uniqueItems": true,
      "description": "Liste des domaines de confiance"
    },
    "maintainer": {
      "type": "string",
      "minLength": 1,
      "description": "Email ou identifiant du responsable de la liste"
    }
  },
  "additionalProperties": true
}
